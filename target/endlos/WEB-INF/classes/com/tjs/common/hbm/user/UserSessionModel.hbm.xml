	<sql-query name="deleteLeastUnusedDevice">
        <query-param name="userId" type="java.lang.Long"/> 
        <![CDATA[
        	delete from tblusersession where fkuserid = :userId order by dateupdate asc limit 1
        ]]>
    </sql-query>
    
